<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1024"/>
        <field name="inherit_id" ref="pyper_queue_job.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//setting[@id='pyper_queue_job_config']" position="before">
                <setting id="pyper_importer_settings">
                    <span class="o_form_label d-block mt16">Importer Configuration</span>
                    <div class="text-muted mb16">
                        Configure et manage the importer.
                    </div>

                    <div name="pyper_importer_endpoints">
                        <span class="fa fa-lg fa-link" aria-label="Number of active endpoints"/>
                        <field name='active_pyper_importer_endpoint_count' class="w-auto ps-3 fw-bold"/>

                        <span class='o_form_label' invisible="active_pyper_importer_endpoint_count &gt; '1'">
                            Active Endpoint
                        </span>

                        <span class='o_form_label' invisible="active_pyper_importer_endpoint_count &lt;= '1'">
                            Active Endpoints
                        </span>

                        <br/>
                        <button name="%(pyper_importer_endpoint_action)d" icon="oi-arrow-right" type="action" string="Manage Endpoints" class="btn-link o_web_settings_access_rights"/>
                    </div>

                    <div name="pyper_importer_providers">
                        <span class="fa fa-lg fa-server" aria-label="Number of active providers"/>
                        <field name='active_pyper_importer_provider_count' class="w-auto ps-3 fw-bold"/>

                        <span class='o_form_label' invisible="active_pyper_importer_provider_count &gt; '1'">
                            Active Provider
                        </span>

                        <span class='o_form_label' invisible="active_pyper_importer_provider_count &lt;= '1'">
                            Active Providers
                        </span>

                        <br/>
                        <button name="%(pyper_importer_provider_action)d" icon="oi-arrow-right" type="action" string="Manage Providers" class="btn-link o_web_settings_access_rights"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
