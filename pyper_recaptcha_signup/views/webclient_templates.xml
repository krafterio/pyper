<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="signup" inherit_id="auth_signup.signup">
        <xpath expr="//button[@type='submit']" position="before">
            <script type="text/javascript" src="https://www.google.com/recaptcha/api.js"/>

            <div class="pyper_recaptcha_signup form-group field-password" t-if ="env['ir.config_parameter'].sudo().get_param('pyper_recaptcha_signup.enabled')">
                <hr/>
                <div class="g-recaptcha" t-att-data-sitekey="env['ir.config_parameter'].sudo().get_param('pyper_recaptcha_signup.site_key')"/>
            </div>
        </xpath>
    </template>
</odoo>
