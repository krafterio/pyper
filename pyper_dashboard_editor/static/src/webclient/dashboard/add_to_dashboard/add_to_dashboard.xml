<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_dashboard_editor.AddToDashboard">
        <Dropdown>
            <button class="pyper_dashboard--add-to-dashboard">
                <t t-call="pyper_dashboard_editor.AddToDashboard.Icon"/>
                Dashboards
            </button>
            <t t-set-slot="content">
                <t t-foreach="boards" t-as="board" t-key="board.id">
                    <Dropdown>
                        <button>
                            <t t-out="board.name"/>
                        </button>
                        <t t-set-slot="content">
                            <t t-call="pyper_dashboard_editor.AddToDashboard.Card">
                                <t t-set="boardId" t-value="board.id"/>
                            </t>
                        </t>
                    </Dropdown>
                </t>
            </t>
        </Dropdown>
    </t>

    <t t-name="pyper_dashboard_editor.AddToDashboard.Card">
        <div class="px-3 pb-2">
            <label class="mb-2">Add to dashboard</label>

            <input type="text" class="o_input mb-3" t-ref="autofocus" t-model.trim="state.name" t-on-keydown="onInputKeydown" />
            <button type="button" class="btn btn-primary" t-on-click="() => this.addToDashboard(boardId)">Add</button>
        </div>
    </t>

    <t t-name="pyper_dashboard_editor.AddToDashboard.Icon">
        <svg viewBox="0 0 50 50" xmlns="http://www.w3.org/2000/svg" class="oi-large">
            <path d="M4,8c0-2.2,1.8-4,4-4h17v17c0,2.2-1.8,4-4,4H4V8Z" fill="var(--oi-color, #0e2328)"/>
            <path d="M4,35c0-2.2,1.8-4,4-4h11v11c0,2.2-1.8,4-4,4H4v-11Z" fill="var(--oi-color, #35bfe5)"/>
            <path d="M25,46h4c2.2,0,4-1.8,4-4v-11h-4c-2.2,0-4,1.8-4,4v11Z" fill="var(--oi-color, #337f8c)"/>
            <path d="M31,17v4c0,2.2,1.8,4,4,4h11v-4c0-2.2-1.8-4-4-4h-11Z" fill="var(--oi-color, #30aac6)"/>
            <path d="M31,4v4c0,2.2,1.8,4,4,4h11v-4c0-2.2-1.8-4-4-4h-11Z" fill="var(--oi-color, #3edbff)"/>
            <path d="M38,46h4c2.2,0,4-1.8,4-4v-11h-4c-2.2,0-4,1.8-4,4v11Z" fill="var(--oi-color, #27616b)"/>
        </svg>
    </t>
</templates>
