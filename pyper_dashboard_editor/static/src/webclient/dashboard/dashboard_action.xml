<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_dashboard_editor.DashboardAction" t-inherit="pyper_dashboard.DashboardAction" t-inherit-mode="extension">
        <xpath expr="//div[@name='pyper_dashboard_action_header']" position="inside">
            <span t-if="!env.isSmall and props.foldable" class="btn p-1 text-muted" t-on-click="() => this.props.toggle()">
                <i class="fa fa-window-maximize" t-if="props.isFolded"/>
                <i class="fa fa-window-minimize" t-else=""/>
            </span>

            <span t-if="!env.isSmall and props.foldable" class="btn p-1 text-muted" t-on-click="() => this.props.remove()">
                <i class="fa fa-close"/>
            </span>
        </xpath>
    </t>
</templates>
