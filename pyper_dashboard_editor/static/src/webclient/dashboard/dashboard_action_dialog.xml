<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_dashboard_editor.DashboardActionDialog" t-inherit="pyper_dashboard_editor.DashboardDialogBase" t-inherit-mode="primary">
        <xpath expr="//t[@t-slot='default']" position="inside">
            <div class="row">
                <div class="col">
                    <label class="o_form_label mb-2" for="title_0">
                        Title
                    </label>

                    <div>
                        <input type="text"
                               id="title_0"
                               t-model="title.input.value"
                               class="o_input"
                               t-att-class="{'is-invalid': title.input.hasError}"
                               autofocus="autofocus"
                        />
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
