<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1024"/>
        <field name="inherit_id" ref="pyper_mail_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='pyper_mail_settings']" position="inside">
                <setting help="Define the position of chatter in all form views">
                    <field name="chatter_position"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
