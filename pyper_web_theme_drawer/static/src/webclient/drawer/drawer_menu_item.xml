<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="pyper_web_theme_drawer.DrawerMenuItem.Content" t-inherit="pyper_drawer.DrawerMenuItem.Content" t-inherit-mode="extension">
        <xpath expr="//t[@t-slot='empty_icon']/i" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-cube" add="ph-light ph-cube"/>
        </xpath>

        <xpath expr="//t[@t-slot='closed_caret_icon']/i" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-caret-right" add="ph-light ph-caret-right"/>
        </xpath>

        <xpath expr="//t[@t-slot='opened_caret_icon']/i" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-caret-down" add="ph-light ph-caret-down"/>
        </xpath>

        <xpath expr="//t[@t-slot='next_caret_icon']/i" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-caret-down" add="ph-light ph-caret-down"/>
        </xpath>

        <xpath expr="//t[@t-slot='next_caret_icon_opened']/i" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-caret-right" add="ph-light ph-caret-right"/>
        </xpath>
    </t>
</templates>
