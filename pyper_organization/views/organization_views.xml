<?xml version="1.0"?>
<odoo>
    <record id="view_organization_tree" model="ir.ui.view">
        <field name="name">organization.tree</field>
        <field name="model">organization</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="image_128" widget="image" string="" options="{'size': [48, 48]}"/>
                <field name="name"/>
                <field name="users_count"/>
                <field groups="base.group_multi_company" name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_organization_form" model="ir.ui.view">
        <field name="name">organization.form</field>
        <field name="model">organization</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Organization">
                <sheet>
                    <field
                        name="image_1920"
                        widget='image'
                        class="oe_avatar"
                        options='{"preview_image": "image_128"}'
                    />

                    <div class="oe_title">
                        <h1>
                            <field
                                class="fw-bold"
                                name="name"
                                placeholder="Name of your Organization"
                            />
                        </h1>
                    </div>

                    <group>
                        <group name="organization_settings_global">
                            <field groups="base.group_erp_manager" name="company_id"/>
                        </group>

                        <group name="organization_settings_technical">
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page name="users" string="Users">
                            <field name="user_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_organizations" model="ir.actions.act_window">
        <field name="name">Organizations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">organization</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
