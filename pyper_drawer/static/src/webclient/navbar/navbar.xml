<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pyper_drawer.NavBar" t-inherit="web.NavBar" t-inherit-mode="extension" owl="1">
        <xpath expr="//header[hasclass('o_navbar')]" position="before">
            <Drawer fixedTop="true" showRootApp="true" minifiable="true" popoverMinified="true" closeOnClick="true"/>
        </xpath>

        <xpath expr="//header[hasclass('o_navbar')]" position="attributes">
            <attribute name="class" separator=" " add="border-bottom"/>
        </xpath>

        <xpath expr="//t[@t-call='web.NavBar.AppsMenu']" position="after">
            <DrawerToggler useCaretIcon="true"/>
        </xpath>
    </t>

</templates>
