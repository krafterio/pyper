<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pyper_web_view.ControlPanel" t-inherit="web.ControlPanel" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='env.config.viewSwitcherEntries?.length > 1']" position="attributes">
            <attribute name="t-if">displayViewSwitcherEntries</attribute>
        </xpath>
    </t>

    <t t-name="pyper_web_view.Breadcrumb.Name" t-inherit="web.Breadcrumb.Name" t-inherit-mode="extension">
        <xpath expr="//t[@t-out='breadcrumb.name']" position="inside">
            <ViewsSwitcher
                defaultTitle="breadcrumb.name"
            />
        </xpath>

        <xpath expr="//t[@t-out='breadcrumb.name']" position="attributes">
            <attribute name="t-if">true</attribute>
            <attribute name="t-out"></attribute>
        </xpath>
    </t>
</templates>
