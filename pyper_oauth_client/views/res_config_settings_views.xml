<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="OAuth Settings" name="oauth_settings">
                    <block title="OAuth Settings">
                        <setting help="This setting will determine if the it's only possible to login with OAuth or not." name="oauth_only_login">
                            <field name="hide_username_password_login"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>