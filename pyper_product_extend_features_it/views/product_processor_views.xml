<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_processor_tree" model="ir.ui.view">
        <field name="name">product.processor.tree</field>
        <field name="model">product.processor</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_product_processor_form" model="ir.ui.view">
        <field name="name">product.processor.form</field>
        <field name="model">product.processor</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                        </group>
                        <group>
                            <field name="logo" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_processor" model="ir.actions.act_window">
        <field name="name">Processors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.processor</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
