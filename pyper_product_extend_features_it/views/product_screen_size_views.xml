<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_screen_size_tree" model="ir.ui.view">
        <field name="name">product.screen.size.tree</field>
        <field name="model">product.screen.size</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_product_screen_size" model="ir.actions.act_window">
        <field name="name">Screen sizes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.screen.size</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
