<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='expiration_date']/strong" position="replace">
            <strong>Period of validity:</strong>
        </xpath>

        <xpath expr="//div[@name='expiration_date']/span[@t-field='doc.validity_date']" position="replace">
            <span class="m-0">
                <span t-field="doc.validity_days"/>
                <span class="ms-1">days</span>
                <span class="ms-1">(</span>
                <span t-field="doc.validity_date"/>
                <span>)</span>
            </span>
        </xpath>

        <xpath expr="//div[@name='so_total_summary']/div[hasclass('row')]/div" position="attributes">
            <attribute name="t-attf-class" separator=" " remove="ms-auto"/>
        </xpath>

        <xpath expr="//div[@name='so_total_summary']/div[hasclass('row')]/div" position="before">
            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-5 col-md-6'}">
                <table
                    t-if="doc.display_bank_account_on_document"
                    class="table table-sm"
                    style="text-wrap: nowrap; border-color: transparent !important;"
                >
                    <tr class="o_subtotal" style="border-color: transparent !important;">
                        <td colspan="2" style="border-color: transparent !important;">
                            <strong class="me-3">Bank account</strong>
                        </td>
                    </tr>

                    <tr class="o_subtotal" style="border-color: transparent !important;">
                        <td style="border-color: transparent !important;" width="1px;">
                            <strong class="me-3">IBAN</strong>
                        </td>

                        <td style="border-color: transparent !important;">
                            <span t-out="doc.payment_method_id.journal_id.bank_account_id.acc_number">IBAN Number</span>
                        </td>
                    </tr>

                    <tr class="o_subtotal" style="border-color: transparent !important;">
                        <td style="border-color: transparent !important;">
                            <strong class="me-3">BIC</strong>
                        </td>

                        <td style="border-color: transparent !important;">
                            <span t-out="doc.payment_method_id.journal_id.bank_account_id.bank_bic">BIC Number</span>
                        </td>
                    </tr>

                    <tr style="display: none">
                        <!-- Hide black last lign -->
                    </tr>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
