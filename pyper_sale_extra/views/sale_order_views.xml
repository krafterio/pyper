<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="main_partner_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_details']/field[@name='validity_date']" position="before">
                <label for="validity_days" invisible="state in ['sale', 'done']"/>
                <div invisible="state in ['sale', 'done']" name="validity_days">
                    <field name="validity_days" class="oe_inline"/> days
                </div>
            </xpath>

            <xpath expr="//group[@name='order_details']/field[@name='payment_term_id']" position="after">
                <field name="payment_method_id" options="{'no_create': True, 'no_edit': True}"/>
            </xpath>

            <xpath expr="//page[@name='optional_products']" position="inside">
                <group string="Documents">
                    <field name="display_details_optional_products"/>
                </group>
            </xpath>

            <xpath expr="//page[@name='optional_products']//field[@name='sale_order_option_ids']/tree/field[@name='discount']" position="after">
                <field name="tax_id" widget="many2many_tags" optional="show"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="price_subtotal" optional="hide"/>
                <field name="price_total" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
