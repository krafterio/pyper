<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1024"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='sale_management']/block[@name='quotation_order_setting_container']" position="inside">
                <setting company_dependent="1">
                    <field name="sale_bank_account_in_report"/>
                </setting>

                <setting help="Add custom text for dedicated signature section in sale order report"
                         company_dependent="1"
                >
                    <field name="sale_signature_information_in_report"/>
                    <label for="sale_signature_information_text_in_report"
                           invisible="not sale_signature_information_in_report"
                    />
                    <field name="sale_signature_information_text_in_report"
                           class="w-100"
                           invisible="not sale_signature_information_in_report"
                           required="sale_signature_information_in_report"
                    />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
