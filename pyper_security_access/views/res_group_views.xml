<?xml version="1.0"?>
<odoo>
    <record id="view_groups_form" model="ir.ui.view">
        <field name="name">res.groups.form.inherit</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="after">
                <page string="Field Access Rights" name="field_access_rights">
                    <field name="field_access_ids">
                        <list string="Field Access Rights" editable="bottom">
                            <field name="field_id"/>
                            <field name="model_id"/>
                            <field name="perm_read" width="100"/>
                            <field name="perm_write" width="100"/>
                            <field name="perm_invisible" width="100"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
