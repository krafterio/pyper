<?xml version="1.0"?>
<odoo>
    <record id="view_ir_model_form" model="ir.ui.view">
        <field name="name">ir.model.form.inherit</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='fields']//form//page[@name='groups']/field[@name='groups']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//page[@name='fields']//form//page[@name='groups']/field[@name='groups']" position="after">
                <field name="access_ids">
                    <tree create="False" edit="False" delete="False">
                        <field name="group_id" width="100"/>
                        <field name="perm_read" width="100"/>
                        <field name="perm_write" width="100"/>
                        <field name="perm_invisible" width="100"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
