    <!-- Options snippet -->
    <template id="sticky_top_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector=".s_sticky_top_variations" data-apply-to-options="background-color">
                <we-colorpicker 
                    string="Mask Color"
                    data-apply-to=".mask"
                    data-select-style="true"
                    data-no-transparency="true"
                    data-css-property="background-color"
                    data-color-prefix="bg-" 
                />
            </div>
        </xpath>
    </template>

    <!-- snippet thumbnails -->
    <template inherit_id="pyper_website_snippets.custom_krafter_snippet_sections" id="custom_krafter_snippet_sections_sticky_top_variations">
        <xpath expr="//div[@id='snippet_scroll_blocks']/div[hasclass('o_panel_body')]" position="inside">

            <t t-snippet="pyper_website_snippets.sticky_top_title_left"
                t-thumbnail="/pyper_website_snippets/static/img/snippets/snippet_thumb/s_top_banner_title_with_foreground_image.svg">
                <keywords>scroll, text, title, columns, features, right</keywords>
            </t>

