<odoo>
    <template id="custom_krafter_snippet_sections" inherit_id="website.snippets" name="Custom Krafter Snippet Sections">
        <xpath expr="//div[@id='snippet_structure']" position="before">

            <div id="snippet_top_blocks" class="o_panel">
                <div class="o_panel_header">Top blocks</div>
                <div class="o_panel_body"/>
            </div>

            <div id="snippet_modern_blocks" class="o_panel">
                <div class="o_panel_header">Modern blocks</div>
                <div class="o_panel_body"/>
            </div>

            <div id="snippet_scroll_blocks" class="o_panel">
                <div class="o_panel_header">Scroll blocks</div>
                <div class="o_panel_body"/>
            </div>

        </xpath>
    </template>
</odoo>
