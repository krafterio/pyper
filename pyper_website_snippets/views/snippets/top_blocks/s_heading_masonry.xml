<odoo>
    <template id="heading_masonry" name="Heading Masonry">
        <section
            class="s_heading_masonry pt-0 pb-2 pb-md-4 o_cc o_cc1"
            data-snippet="s_heading_masonry"
            data-name="Heading Masonry"
        >
            <div class="s_heading_masonry_wrapper">
                <div class=" container-fluid h-100">
                    <div class="row h-100">
                        <!-- Column #1 -->
                        <div class="col-2 ps-0 pe-1 pe-md-2 h-100" data-name="Column #1">
                            <div class="d-flex flex-column h-100">
                                <div class="pb-1 pb-md-2" style="height:65%;">
                                    <img 
                                        class="o_anim_fade_in o_animate o_anim_from_bottom" 
                                        src="/website/static/src/img/backgrounds/peak.jpg" 
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.0s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                                <div class="pt-1 pt-md-2" style="height:35%;">
                                    <img
                                        class="o_anim_fade_in o_animate o_anim_from_bottom"
                                        src="/website/static/src/img/library/ice_coffe.jpg"
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.1s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                            </div>
                        </div>
                        <!-- Column #2 -->
                        <div class="col-5 ps-1 ps-md-2 pe-1 pe-md-2 h-100" data-name="Column #2">
                            <div class="d-flex flex-column h-100">
                                <div class="d-flex pb-1 pb-md-2" style="height:40%;">
                                    
                                        <div class="col-8 pe-1 pe-md-2">
                                            <img
                                                class="o_anim_fade_in o_animate o_anim_from_bottom"
                                                src="/website/static/src/img/snippets_demo/s_quotes_carousel_0.jpg"
                                                style="width:100%; height:100%; object-fit:cover; animation-delay: 0.2s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                            />
                                        </div>
                                        <div class="col-4 ps-1 ps-md-2">
                                            <img
                                                class="o_anim_fade_in o_animate o_anim_from_bottom"
                                                src="/website/static/src/img/library/mobile_device.jpg"
                                                style="width:100%; height:100%; object-fit:cover; animation-delay: 0.3s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                            />
                                        </div>
                                
                                </div>
                                <div class="pt-1 pt-md-2" style="height:60%;">
                                    <img
                                        class="o_anim_fade_in o_animate o_anim_from_bottom" 
                                        src="/website/static/src/img/backgrounds/la.jpg"
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.4s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                            </div>
                        </div>
                        <!-- Column #3 -->
                        <div class="col-3 ps-1 ps-md-2 pe-1 pe-md-2 h-100" data-name="Column #3">
                            <div class="d-flex flex-column h-100">
                                <div class="pb-1 pb-md-2" style="height:55%;">
                                    <img
                                        class="o_anim_fade_in o_animate o_anim_from_bottom"
                                        src="/website/static/src/img/backgrounds/panama-sky.jpg"
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.5s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                                <div class="pt-1 pt-md-2" style="height:45%;">
                                    <img 
                                        class="o_anim_fade_in o_animate o_anim_from_bottom"
                                        src="/website/static/src/img/library/marketing.jpg"
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.6s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                            </div>
                        </div>
                        <!-- Column #4 -->
                        <div class="col-2 ps-1 ps-md-2 h-100" data-name="Column #4">
                            <div class="d-flex flex-column h-100">
                                <div class="pb-1 pb-md-2" style="height:30%;">
                                    <img
                                        class="o_anim_fade_in o_animate o_anim_from_bottom"
                                        src="/website/static/src/img/library/rocket.jpg"
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.7s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                                <div class="pt-1 pt-md-2" style="height:70%;">
                                    <img
                                        class="o_anim_fade_in o_animate o_anim_from_bottom"
                                        src="/website/static/src/img/snippets_demo/s_parallax.jpg"
                                        style="width:100%; height:100%; object-fit:cover; animation-delay: 0.8s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template inherit_id="pyper_website_snippets.custom_krafter_snippet_sections"  id="custom_krafter_snippet_sections_heading_masonry">
        <xpath expr="//div[@id='snippet_top_blocks']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="pyper_website_snippets.heading_masonry"
                t-thumbnail="/pyper_website_snippets/static/img/snippets/snippet_thumb/s_heading_masonry.svg">
                <keywords>masonry, image, background, banner</keywords>
            </t>
        </xpath>
    </template>
</odoo>
