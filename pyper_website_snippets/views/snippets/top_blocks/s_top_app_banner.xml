<odoo>
    <template id="top_app_banner" name="Top app banner">
        <section
            class="pt96 pb96  o_cc o_cc2"
            data-snippet="s_cover"
            data-name="Top app banner"
            style="background-image: none;"
        >
            <div class="container s_allow_columns text-center">
                <div class="row">
                    <div class="col-12 o_animate o_anim_fade_in" style="-wanim-intensity: 20;animation-delay: 0.0s;">
                        <p class="h4 text-primary">new release v2.5.0</p>
                        <div class="row justify-content-center">
                            <h1 class="row justify-content-center  col-12 col-xl-5">
                                Discover, our powerfull new features
                            </h1>
                        </div>
                        <p class="lead  pb-0 mb-0">We are happy to introduce a suite of
                            powerful new
                            features designed to enhance your experience and streamline your workflow.
                        </p>
                        <p class="lead ">Our latest updates include advanced analytics tools,
                            intuitive user interfaces, and seamless integration capabilities.
                        </p>

                        <div class="d-flex align-items-center justify-content-center gap-2 py-4">
                            <a class="btn btn-primary " href="#">Let me try it now !</a>
                            <a class="btn btn-secondary " href="#">See release resume</a>
                        </div>
                    </div>
                </div>

                <div
                    class="s_image_gallery o_spc-small  o_masonry"
                    data-columns="1"
                >
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="o_masonry_col o_snippet_not_selectable col-lg-12">
                                <img
                                    class="img img-fluid"
                                    src="/website/static/src/img/snippets_demo/s_quotes_carousel_0.jpg"
                                    data-name="Image"
                                    alt=" "
                                    loading="lazy"
                                    data-mimetype="image/jpeg"
                                    style="box-shadow: 0 40px 220px 0 var(--primary);"
                                />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </template>

    <template inherit_id="pyper_website_snippets.custom_krafter_snippet_sections"  id="custom_krafter_snippet_sections_top_app_banner">
        <xpath expr="//div[@id='snippet_top_blocks']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="pyper_website_snippets.top_app_banner"
                t-thumbnail="/pyper_website_snippets/static/img/snippets/snippet_thumb/s_top_app_banner.svg">
                <keywords>app, banner</keywords>
            </t> 
        </xpath>
    </template>
</odoo>
