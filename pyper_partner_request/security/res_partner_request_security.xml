<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="partner_request_rule_company" model="ir.rule">
            <field name="name">View only my company requests</field>
            <field name="model_id" ref="model_res_partner_request"/>
            <field name="domain_force">                ['|', 
                '&amp;', 
                    ('author_parent_id', '!=', False), 
                    ('author_parent_id', '=', user.partner_id.parent_id.id),
                ('author_id', '=', user.partner_id.id)
            ]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>