<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_request_tree" model="ir.ui.view">
        <field name="name">res.partner.request.tree</field>
        <field name="model">res.partner.request</field>
        <field name="arch" type="xml">
            <tree string="Requests">
                <field name="name"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="author_parent_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_partner_request_kanban">
        <field name="name">requests kanban</field>
        <field name="model">res.partner.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" sample="1">
                <field name="name"/>
                <field name="author_parent_id"/>
                <field name="state"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="author_parent_id"/>
                                </div>
                                <div>
                                    <div>
                                        <field name="state"/>
                                    </div>
                                    <div class="float-start mr4" groups="base.group_user">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
                <grouping>
                    <group expand="1" string="Closed" domain="[('state', '=', 'closed')]"/>
                    <group expand="1" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                    <group expand="1" string="To be processed" domain="[('state', '=', 'to_be_processed')]"/>
                    <group expand="1" string="Pending" domain="[('state', '=', 'pending')]"/>
                </grouping>
            </kanban>
        </field>
    </record>

    <record id="view_partner_request_form" model="ir.ui.view">
        <field name="name">res.partner.request.form</field>
        <field name="model">res.partner.request</field>
        <field name="arch" type="xml">
            <form string="res.partner.request">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="to_be_processed,in_progress,pending,closed" options="{'clickable': 1}" invisible="state == 'waiting_for_validation' or state == 'awaiting_requalification'"/>
                        <field name="state" widget="statusbar" statusbar_visible="waiting_for_validation" invisible="state != 'waiting_for_validation'"/>
                        <field name="state" widget="statusbar" statusbar_visible="awaiting_requalification" invisible="state != 'awaiting_requalification'"/>
                        <div invisible="id == False">
                            <button name="action_validate" string="Validate" type="object" class="oe_highlight" groups="pyper_partner_request.group_request_validator" invisible="state != 'waiting_for_validation'"/>
                            <button name="action_close" string="Close" type="object" class="oe_highlight" groups="pyper_partner_request.group_request_validator" invisible="state != 'waiting_for_validation'"/>
                        </div>
                    </header>
                    <div class="oe_title my-4">
                        <div class="mb-2">
                            <h1 class="w-100 mt-2 mb-0">
                                <field
                                    class="fw-bold no_effect mb-0"
                                    name="name"
                                    rows="1"
                                    widget="text"
                                    default_focus="True"
                                    placeholder="Name"
                                />
                            </h1>
                        </div>    
                        <h2>
                            <field name="author_parent_id"/>
                        </h2>
                    </div>
                    <div>
                    </div>
                    <div class="my-2">
                        <field name="description" placeholder="Description"/>
                    </div>
                    <div class="request-detail d-flex flex-column my-4">
                        <group>
                            <field name="category"/>
                        </group>
                        <div class="float-start">
                            <b>Priority: </b>
                            <field class="my-2" name="priority" widget="priority"/>
                        </div>
                        <div class="d-flex flex-column" invisible="id == False">
                            <div>
                                <b class="my-2">Created By: </b>
                                <field name="author_id"/>
                            </div>
                            <div>
                                <b class="my-2">Created Date: </b>
                                <field name="create_date"/>
                            </div>
                            <div>
                                <b class="my-2">Last Update: </b>
                                <field name="write_date"/>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_partner_request_open" model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">res.partner.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="view_partner_request_tree"/>
    </record>
</odoo>
