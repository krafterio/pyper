<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="pyper_web_theme.FormStatusIndicator" t-inherit="web.FormStatusIndicator" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_form_status_indicator')]" position="replace">
            <div class="o_form_status_indicator d-md-flex align-items-center align-self-md-end me-auto" t-att-class="{ o_form_status_indicator_new_record: props.model.root.isNew }">
                <div class="d-flex" t-att-class="{ invisible: !(props.model.root.isNew or displayButtons) }">
                    <button
                        type="button"
                        class="o_form_button_save btn btn-panel btn-panel-left text-nowrap btn rounded-0"
                        data-hotkey="s"
                        t-on-click.stop="save"
                        data-tooltip="Save manually"
                        aria-label="Save manually"
                        t-ref="save">
                        <i class="ph ph-floppy-disk-back"/>
                    </button>
                    <button
                        type="button"
                        class="o_form_button_cancel btn btn-panel btn-panel-left btn-panel-white text-nowrap rounded-0"
                        data-hotkey="j"
                        t-on-click.stop="discard"
                        data-tooltip="Discard changes"
                        aria-label="Discard changes">
                        <i class="ph ph-arrow-counter-clockwise"/>
                    </button>
                </div>
                <span
                    t-if="!props.model.root.isNew and indicatorMode === 'invalid'"
                    class="text-danger small ms-2"
                    data-tooltip="Unable to save. Correct the issue or discard changes">
                    <i class="fa fa-warning" />
                </span>
            </div>
        </xpath>
    </t>
</templates>