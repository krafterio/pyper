<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="pyper_web_theme.FormView" t-inherit="web.FormView" t-inherit-mode="extension">
        <xpath expr="//t[@t-set-slot='control-panel-create-button'][2]" position="replace">
            <t t-set-slot="control-panel-create-button">
                    <t t-if="canCreate">
                        <button type="button" class="btn btn-primary text-nowrap o_form_button_create" data-hotkey="c" t-on-click.stop="create">
                            <i class="fa fa-plus"/>
                        </button>
                    </t>
                </t>
        </xpath>
    </t>

</templates>