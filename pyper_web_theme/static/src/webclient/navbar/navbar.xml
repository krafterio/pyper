<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="pyper_web_theme.NavBar" t-inherit="web.NavBar" t-inherit-mode="extension">
        <xpath expr="//header[hasclass('o_navbar')]//DropdownItem[@t-if='currentApp']" position="attributes">
            <attribute name="class">'o_menu_brand d-none d-md-flex fw-bolder'</attribute>
        </xpath>

        <xpath expr="//Drawer" position="attributes">
            <attribute name="nav">true</attribute>
            <attribute name="fixedTop">false</attribute>
            <attribute name="hideEmptyCategory">true</attribute>
            <attribute name="hideCategoryLabelMinified">true</attribute>
            <attribute name="showCategorySectionMinified">false</attribute>
            <attribute name="alwaysMini">true</attribute>
            <attribute name="alwaysHeader">true</attribute>
            <attribute name="alwaysFooter">true</attribute>
            <attribute name="disabledOnSmallScreen">true</attribute>
        </xpath>

        <xpath expr="//Drawer" position="inside">
            <t t-set-slot="header">
                <div class="o_main_navbar">
                    <DrawerAppMenu minified="true">
                        <img src="/pyper_web_theme/static/img/icon.png" width="50" height="50" class="rounded-3"/>
                    </DrawerAppMenu>
                </div>
            </t>

            <t t-set-slot="footer">
                <div class="o_drawer--footer">
                    <DrawerMenuItem
                        menuId="'base.menu_administration'"
                        fontIcon="'ph ph-gear'"
                        label="'Administration'"
                    />
                </div>
            </t>
        </xpath>

        <xpath expr="//DrawerToggler" position="attributes">
            <attribute name="autoHide">true</attribute>
            <attribute name="useCaretIcon">false</attribute>
        </xpath>
    </t>

    <t t-name="pyper_web_theme.ActivityMenu" t-inherit="mail.ActivityMenu" t-inherit-mode="extension">
        <xpath expr="//i[hasclass('fa-clock-o')]" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-lg fa-clock-o"
                       add="ph ph-check-square nav-bar-icon mx-2"/>
        </xpath>
    </t>

    <t t-name="pyper_web_theme.MessagingMenu" t-inherit="mail.MessagingMenu" t-inherit-mode="extension">
        <xpath expr="//i[hasclass('fa-comments')]" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-lg fa-comments"
                       add="ph ph-chat-text nav-bar-icon mx-2"/>
        </xpath>
    </t>

    <t t-name="pyper_web_theme.DebugMenu" t-inherit="web.DebugMenu" t-inherit-mode="extension">
         <xpath expr="//i[hasclass('fa-bug')]" position="attributes">
            <attribute name="class" add="ph ph-bug nav-bar-icon mx-2" separator=" " remove="fa fa-bug"/>
        </xpath>
    </t>

    <t t-name="pyper_web_theme.Breadcrumbs" t-inherit="web.Breadcrumbs" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_back_button')]" position="attributes">
            <attribute name="class" separator=" " add="btn-primary me-2"/>
        </xpath>
    </t>

    <t t-name="pyper_web_theme.SearchMenu" t-inherit="pyper_command_search.SearchMenu" t-inherit-mode="extension">
        <xpath expr="//div[1]" position="attributes">
            <attribute name="class" add="pt-1" separator=" "/>
        </xpath>

        <xpath expr="//i[hasclass('fa-search')]" position="attributes">
            <attribute name="class" separator=" " remove="fa fa-lg fa-search"
                       add="ph ph-magnifying-glass nav-bar-icon mx-1 text-dark"/>
        </xpath>
    </t>

    <t t-name="pyper_web_theme.FormStatusIndicator" t-inherit="web.FormStatusIndicator" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_form_button_save')]" position="attributes">
            <attribute name="class" add="btn-primary me-2" separator=" "
                       remove="btn-light o_form_button_save px-1 py-0 lh-sm rounded-0"/>
        </xpath>

        <xpath expr="//button[hasclass('o_form_button_cancel')]" position="attributes">
            <attribute name="class" add="btn-light" separator=" "
                       remove="btn-light o_form_button_cancel px-1 py-0 lh-sm rounded-0"/>
        </xpath>
    </t>
</templates>
