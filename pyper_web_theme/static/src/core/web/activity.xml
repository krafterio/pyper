<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="pyper_web_theme.Activity" t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-Activity')]" position="attributes">
            <attribute name="class" separator=" " remove="py-1 mb-2" add="py-3 border-top border-bottom bg-light"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity')]//img[hasclass('cursor-pointer')]" position="attributes">
            <attribute name="class" separator=" " remove="rounded" add="rounded-pill"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[1]" position="attributes">
            <attribute name="class" separator=" " remove="fw-bolder" add="fw-bold"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[2]" position="attributes">
            <attribute name="class" separator=" " remove="fw-bolder" add="fw-bold"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[3]" position="attributes">
            <attribute name="class" separator=" " remove="fw-bolder" add="fw-bold"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[4]" position="attributes">
            <attribute name="class" separator=" " remove="fw-bolder" add="fw-bold"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[5]" position="attributes">
            <attribute name="class" separator=" " remove="fw-bolder" add="fw-bold"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[6]" position="attributes">
            <attribute name="class" separator=" " remove="fw-bolder" add="fw-bold d-none"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[hasclass('o-mail-Activity-user')]" position="attributes">
            <attribute name="class" separator=" " add="d-none"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-info')]//i" position="after">
            <span class="fw-bold d-block text-break mt-1"><t t-esc="displayName"/></span>

            <div class="d-flex small align-items-center">
                <span class="o-mail-Activity-user mt-2"><t t-esc="activity.user_id[1]"/></span>
            </div>
        </xpath>

        <xpath expr="//table[hasclass('o-mail-Activity-details')]" position="attributes">
            <attribute name="class" separator=" " remove="mt-2" add="mt-3"/>
        </xpath>

        <xpath expr="//div[hasclass('o-mail-Activity-note')]" position="attributes">
            <attribute name="class" separator=" " add="mt-2"/>
        </xpath>

        <xpath expr="//div[hasclass('lh-lg')]" position="attributes">
            <attribute name="class" separator=" " add="mt-2"/>
        </xpath>

        <xpath expr="//span[hasclass('o-mail-Activity-markDone')]" position="replace">
            <span class="o-mail-Activity-markDone btn btn-sm btn-primary" t-on-click="onClickMarkAsDone">
                <i class="ph ph-check"/>
            </span>
        </xpath>

        <xpath expr="//t[@t-set-slot='toggler']/span[hasclass('btn')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-link text-action p-0 me-3" add="btn btn-sm btn-light"/>
        </xpath>

        <xpath expr="//span[hasclass('o-mail-Activity-edit')]" position="replace">
            <span class="o-mail-Activity-edit btn btn-sm btn-light ms-2" t-on-click="edit">
                <i class="ph ph-pencil"/>
            </span>
        </xpath>

        <xpath expr="//span[@t-on-click='unlink']" position="replace">
            <span class="btn btn-sm btn-light ms-2" t-on-click="unlink">
                <i class="ph ph-x"/>
            </span>
        </xpath>
    </t>
</templates>
