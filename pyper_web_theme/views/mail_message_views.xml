<odoo>
    <record model="ir.ui.view" id="view_mail_message_kanban">
        <field name="name">mail.message.kanban.form</field>
        <field name="model">mail.message</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="author_id" group_create="False" group_delete="False" group_edit="False">
                <field name="body"/>
                <field name="res_id" options="{'no_create': True, 'no_edit': True}"/>
                <field name="author_id" options="{'no_create': True, 'no_edit': True}"/>
                <field name="date"/>
                <field name="subtype_id"/>
                <field name="model"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="mb-2 rounded-3 p-3">
                            <div class="oe_kanban_details mb-1">
                                <a type="open" class="o_kanban_record_title">
                                    <field name="date"/>
                                </a>
                            </div>

                            <div>
                                <field name="body"/>
                            </div>

                            <div class="mt-2 d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <field name="author_id" class="small"/>
                                    <field name="model" class="ms-2 small"/>
                                </div>
                                <div class="d-flex align-items-center">
                                    <field name="res_id" class="text-muted" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="mail_message_calendar_view" model="ir.ui.view">
        <field name="name">mail.message.calendar</field>
        <field name="model">mail.message</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Done activities" create="0" mode="month" date_start="date" color="author_id" hide_time="true" event_limit="5">
                <field name="author_id" avatar_field="avatar_128"/>
            </calendar>
        </field>
    </record>

    <record id="action_view_mail_message" model="ir.actions.act_window">
        <field name="name">Messages</field>
        <field name="res_model">mail.message</field>
        <field name="view_mode">calendar,tree,kanban,form</field>
    </record>
</odoo>
