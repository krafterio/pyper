<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- My collections -->
    <record id="action_settings_menu_category_my_collections" model="ir.actions.act_window">
        <field name="name">Settings my collections</field>
        <field name="res_model">ir.collections</field>
        <field name="view_id" ref="view_ir_collections_simple_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="mobile_view_mode">tree</field>
        <field name="search_view_id" ref="view_ir_collections_search"/>
        <field name="domain">[('menu_id.category_id', '=', active_id)]</field>
        <field name="target">current</field>
        <field name="context">{
            'create': False,
        }</field>
    </record>

    <record id="menu_category_my_collections" model="ir.ui.menu.category">
        <field name="name">My collections</field>
        <field name="sequence">920</field>
        <field name="ir_action_id" ref="action_settings_menu_category_my_collections"/>
    </record>

    <!-- Shared collections -->
    <record id="action_settings_menu_category_shared_collections" model="ir.actions.act_window">
        <field name="name">Settings shared collections</field>
        <field name="res_model">ir.collections</field>
        <field name="view_id" ref="view_ir_collections_simple_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="mobile_view_mode">tree</field>
        <field name="search_view_id" ref="view_ir_collections_search"/>
        <field name="domain">[('menu_id.category_id', '=', active_id)]</field>
        <field name="target">current</field>
        <field name="context">{
            'create': False,
        }</field>
    </record>

    <record id="menu_category_shared_collections" model="ir.ui.menu.category">
        <field name="name">Shared collections</field>
        <field name="sequence">930</field>
        <field name="ir_action_id" ref="action_settings_menu_category_shared_collections"/>
    </record>
</odoo>
