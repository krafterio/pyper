<odoo>

    <record id="action_companies" model="ir.actions.act_window">
        <field name="name">Companies</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'default_is_company': True}</field>
        <field name="domain">[('is_user', '=', False), ('is_company', '=', True)]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Person in your address book
            </p>
        </field>
    </record>

    <record id="action_persons" model="ir.actions.act_window">
        <field name="name">Persons</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'default_is_company': False}</field>
        <field name="domain">[('is_user', '=', False), ('is_company', '=', False)]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Contact in your address book
            </p>
        </field>
    </record>
</odoo>
