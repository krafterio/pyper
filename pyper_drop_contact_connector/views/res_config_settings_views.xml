<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                 <block title="Drop Contact Connector" name="pyper_drop_contact_connector">
                        <setting
                            help="Automatically get contact information from Drop Contact integration"
                            title="Use the Drop Contact service to enrich contact information"
                            id="pyper_drop_contact_connector">
                            <field name="drop_contact_token_api" password="True"/>
                        </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
