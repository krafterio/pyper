<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_IT_kanban">
        <field name="name">product.template.condition.it.kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="pyper_product_extend_features_it.product_template_IT_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_pattern']" position="after">
                <field name="count_child_ids"/>
                <field name="child_ids"/>
            </xpath>

            <xpath expr="//div[@name='block_description']//field[@name='description_sale']" position="after">
                <div t-if="record.child_ids">
                    <div
                        class="o_kanban_record_body"
                        t-foreach="record.child_ids" t-as="child"
                    >
                        <strong class="d-block fw-bolder mb-0" t-out="child"/>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>