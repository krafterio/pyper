<odoo>
    <record id="view_technology_type_tree" model="ir.ui.view">
        <field name="name">technology.type.tree</field>
        <field name="model">technology.type</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
           <tree>
               <field name="name"/>
           </tree>
        </field>
    </record>

    <record id="view_technology_type_form" model="ir.ui.view">
        <field name="name">technology.type.form</field>
        <field name="model">technology.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
           <form>
                <div class="row w-100">
                    <div class="col-xs-12 col-md-12 col-lg-9">
                        <sheet class="w-100 p-0 m-0 border-0 rounded-0">
                            <h1 class="w-100">
                                <field
                                    class="fw-bold"
                                    name="name"
                                    rows="1"
                                    widget="text"
                                    placeholder="e.g. ERP, Website, Framework, ..."
                                />
                            </h1>
                        </sheet>
                    </div>
                </div>
           </form>
        </field>
    </record>

    <record id="action_technology_types" model="ir.actions.act_window">
        <field name="name">Technology types library</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">technology.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('pyper_stack_tracker.view_technology_type_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('pyper_stack_tracker.view_technology_type_form')}),
        ]"/>
    </record>
</odoo>
