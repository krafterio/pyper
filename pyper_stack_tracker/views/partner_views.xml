<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Technology" name="technology" invisible="is_company == False">
                    <div class="alert alert-info fadeInDownLight"
                         role="alert"
                    >
                        <p class="mb-0">This tab allows you to get information about technology used in partner website.</p>
                    </div>

                    <field name="technology_ids" colspan="2"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
