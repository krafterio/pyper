<odoo>
    <record id="view_code_language_tree" model="ir.ui.view">
        <field name="name">code.language.tree</field>
        <field name="model">code.language</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
           <tree>
               <field name="name"/>
               <field name="color" widget="color_picker"/>
           </tree>
        </field>
    </record>

    <record id="view_code_language_form" model="ir.ui.view">
        <field name="name">code.language.form</field>
        <field name="model">code.language</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
           <form>
                <div class="row w-100">
                    <div class="col-xs-12 col-md-12 col-lg-9">
                        <sheet class="w-100 p-0 m-0 border-0 rounded-0">
                            <h1 class="w-100">
                                <field
                                    class="fw-bold"
                                    name="name"
                                    rows="1"
                                    widget="text"
                                    placeholder="Code language name"
                                />
                            </h1>
                            <field name="color" widget="color_picker"/>
                        </sheet>
                    </div>
                </div>
           </form>
        </field>
    </record>

    <record id="action_code_languages" model="ir.actions.act_window">
        <field name="name">Code languages library</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">code.language</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('pyper_stack_tracker.view_code_language_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('pyper_stack_tracker.view_code_language_form')}),
        ]"/>
    </record>
</odoo>
