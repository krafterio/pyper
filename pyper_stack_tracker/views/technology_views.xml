<odoo>
    <record id="view_technology_tree" model="ir.ui.view">
        <field name="name">technology.tree</field>
        <field name="model">technology</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
           <tree>
               <field name="name"/>
               <field name="type_id"/>
               <field name="code_language_ids" widget="many2many_tags"/>
           </tree>
        </field>
    </record>

    <record id="view_technology_form" model="ir.ui.view">
        <field name="name">technology.form</field>
        <field name="model">technology</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
           <form>
                <div class="row w-100">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <sheet class="w-100 p-0 m-0 border-0 rounded-0">
                            <h1 class="w-100">
                                <field
                                    class="fw-bold"
                                    name="name"
                                    rows="1"
                                    widget="text"
                                    placeholder="Technology name"
                                />
                            </h1>

                            <group>
                                <group>
                                    <field name="type_id"/>
                                </group>
                            </group>
                        </sheet>

                        <field name="code_language_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="color" widget="color_picker"/>
                            </tree>
                        </field>
                    </div>
                </div>
           </form>
        </field>
    </record>

    <record id="action_technologies" model="ir.actions.act_window">
        <field name="name">Technologies library</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">technology</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('pyper_stack_tracker.view_technology_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('pyper_stack_tracker.view_technology_form')}),
        ]"/>
    </record>
</odoo>
