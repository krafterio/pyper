<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">10000</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='k-partner-scraper-action']">
                <button
                    class="btn btn-secondary btn-sm mb-3"
                    type="object"
                    name="action_search_piloterr_linkedin_company_profil"
                    icon="fa-linkedin me-1"
                    data-tooltip-delay="0"
                    invisible="company_linkedin_url == False or (image_1920 and website and comment)"
                    title="Get infos from linkedIn"
                >Get infos from linkedIn</button>
            </xpath>

            <xpath expr="//field[@name='child_ids']//t[@t-name='kanban-menu']" position="inside">
                <field name="linkedin_url" invisible="True"/>

                <button
                    class="dropdown-item"
                    type="object"
                    name="action_search_piloterr_linkedin_profil"
                    icon="fa-linkedin me-1"
                    data-tooltip-delay="0"
                    invisible="linkedin_url == False"
                    title="Get infos from linkedIn"
                >Get infos from linkedIn</button>
            </xpath>
        </field>
    </record>
</odoo>