<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_website_banner_tree" model="ir.ui.view">
        <field name="name">website.banner.tree</field>
        <field name="model">website.banner</field>
        <field name="arch" type="xml">
            <tree string="Website Banner">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="bg_color" widget="color"/>
                <field name="only_shop"/>
            </tree>
        </field>
    </record>

    <record id="view_website_banner_form" model="ir.ui.view">
        <field name="name">website.banner.form</field>
        <field name="model">website.banner</field>
        <field name="arch" type="xml">
            <form string="Website Banner">
                <group string="Banner">
                    <group class="mt-4">
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="only_shop"/>
                    </group>
                    <group>
                        <group>
                            <field name="bg_color" widget="color"/>
                            <field name="has_second_bg_color"/>
                            <field name="second_bg_color" widget="color" invisible="not has_second_bg_color"
                                   help="Add a second color to create a gradient"/>
                        </group>
                        <group>
                            <field name="has_outline"/>
                            <field name="outline_color" widget="color" invisible="not has_outline"/>
                        </group>
                    </group>
                </group>

                <group string="Elements" class="mt-5">
                    <field name="element_ids" class="mt-3" string="">
                        <tree create="1" edit="1">
                            <field name="sequence" widget="handle"/>
                            <field name="content"/>
                            <field name="type"/>
                            <field name="is_btn"/>
                            <field name="text_color" widget="color"/>
                            <field name="bg_color" widget="color"/>
                            <field name="link"/>
                            <field name="product_tmpl_id"/>
                            <field name="page_id"/>
                        </tree>
                        <form create="1" edit="1">
                            <group class="row">
                                <group string="Utilisation">
                                    <field name="type"/>
                                    <field name="link" invisible="type != 'link'"/>
                                    <field name="product_tmpl_id" invisible="type != 'product'"/>
                                    <field name="page_id" invisible="type != 'page'"/>
                                </group>
                                <div class="d-flex flex-column">
                                    <group string="Style">
                                        <field name="is_btn" invisible="type == 'text'"/>
                                        <field name="is_bold"/>
                                        <field name="is_italic"/>
                                    </group>

                                    <group string="Colors" class="mt-2">
                                        <div class="d-flex align-items-center gap-2">
                                            <label for="text_color"/>
                                            <field name="text_color" widget="color" string="Text"/>
                                            <button name="action_remove_color_text" type="object"
                                                    class="mb-1 btn btn-primary p-1 rounded badge rounded-pill">
                                                <i class="fa fa-times" title="Remove color"></i>
                                            </button>
                                        </div>

                                        <div class="d-flex align-items-center gap-2">
                                            <label for="bg_color"/>
                                            <field name="bg_color" widget="color" string="Background"/>
                                            <button name="action_remove_color_bg" type="object"
                                                    class="mb-1 btn btn-primary p-1 rounded badge rounded-pill">
                                                <i class="fa fa-times" title="Remove color"></i>
                                            </button>
                                        </div>

                                        <div class="d-flex align-items-center gap-2" invisible="not is_btn">
                                            <label for="outline_color"/>
                                            <field name="outline_color" widget="color" string="Outline"/>
                                            <button name="action_remove_color_outline" type="object"
                                                    class="mb-1 btn btn-primary p-1 rounded badge rounded-pill">
                                                <i class="fa fa-times" title="Remove color"></i>
                                            </button>
                                        </div>

                                    </group>
                                </div>
                            </group>
                        </form>
                    </field>
                </group>

            </form>
        </field>
    </record>

    <record id="action_website_banner" model="ir.actions.act_window">
        <field name="name">Website Banner</field>
        <field name="res_model">website.banner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_website_banner_root"
            name="Website Banner"
            parent="website.menu_website_configuration"
            action="action_website_banner"
            sequence="10"
    />

</odoo>
