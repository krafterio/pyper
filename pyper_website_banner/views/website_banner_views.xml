<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_website_banner_tree" model="ir.ui.view">
        <field name="name">website.banner.tree</field>
        <field name="model">website.banner</field>
        <field name="arch" type="xml">
            <tree string="Website Banner">
                <field name="name"/>
                <field name="website_id"/>
                <field name="only_shop"/>
                <field name="activate" string="Manually activated"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="bg_color" widget="color"/>
            </tree>
        </field>
    </record>

    <record id="view_website_banner_form" model="ir.ui.view">
        <field name="name">website.banner.form</field>
        <field name="model">website.banner</field>
        <field name="arch" type="xml">
            <form string="Website Banner">
                <group string="Banner">
                    <group class="mt-4">
                        <field name="name"/>
                        <field name="website_id"/>
                        <field name="only_shop"/>
                        <field name="activate_mode"/>
                        <field name="activate" invisible="activate_mode != 'manually'"/>
                        <field name="start_date" widget="daterange" options="{'end_date_field': 'end_date'}"
                               invisible="activate_mode != 'date'"/>
                        <field name="end_date" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="bg_color" widget="color"/>
                            <field name="has_second_bg_color"/>
                            <field name="second_bg_color" widget="color" invisible="not has_second_bg_color"
                                   help="Add a second color to create a gradient"/>
                        </group>
                        <group>
                            <field name="padding" help="Add space at the top and bottom of content (in pixels)"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" widget="html"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_website_banner" model="ir.actions.act_window">
        <field name="name">Website Banner</field>
        <field name="res_model">website.banner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_website_banner_root"
            name="Website Banner"
            parent="website.menu_website_configuration"
            action="action_website_banner"
            sequence="10"
    />

</odoo>
