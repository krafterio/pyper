<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_ui_kit.FormStatusIndicator" t-inherit="web.FormStatusIndicator" t-inherit-mode="extension">
        <xpath expr="//button[1]" position="attributes">
            <attribute name="class" separator=" " add="cp_btn btn-outline-primary ms-1" remove="me-2 btn-primary border-0"/>
        </xpath>

        <xpath expr="//button[2]" position="attributes">
            <attribute name="class" separator=" " add="cp_btn btn-outline-primary" remove="btn-light btn-panel border-0"/>
        </xpath>

        <xpath expr="//div[hasclass('o_form_status_indicator_buttons')]" position="attributes">
            <attribute name="t-att-class">{ 'd-none': !(props.model.root.isNew or displayButtons) }</attribute>
        </xpath>
    </t>
</templates>
