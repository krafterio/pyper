<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pyper_ui_kit.FormView" t-inherit="web.FormView" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_form_view_container')]//t[@t-set-slot='layout-actions']/t[@t-if='buttonBoxTemplate']" position="before">
            <t t-if="buttonActionsTemplate">
                <t t-call="{{ buttonActionsTemplate }}" t-call-context="{ __comp__: Object.assign(Object.create(this), { this, props: { ...this.props, record: this.model.root } }) }"/>
            </t>
        </xpath>
    </t>
</templates>
