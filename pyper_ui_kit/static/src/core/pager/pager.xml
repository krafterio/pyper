<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_ui_kit.Pager" t-inherit="web.Pager" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_pager_previous')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-secondary" add="cp_btn btn-outline-secondary"/>
        </xpath>

        <xpath expr="//button[hasclass('o_pager_next')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-secondary" add="cp_btn btn-outline-secondary"/>
        </xpath>
    </t>
</templates>
