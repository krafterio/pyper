<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Cog Menu -->
    <t t-name="pyper_ui_kit.CogMenu" t-inherit="web.CogMenu" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_cp_action_menus')]/Dropdown[1]" position="attributes">
            <attribute name="togglerClass">'btn btn-outline-secondary px-2 cp_btn'</attribute>
        </xpath>
    </t>

    <!-- Action Menus -->
    <t t-name="pyper_ui_kit.ActionMenus" t-inherit="web.ActionMenus" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_cp_action_menus')]/Dropdown[2]" position="attributes">
            <attribute name="togglerClass">'btn btn-outline-secondary px-2 cp_btn'</attribute>
        </xpath>
    </t>
</templates>
