<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_ui_kit.SearchBar" t-inherit="web.SearchBar" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_cp_searchview')]/div[hasclass('o_searchview')]" position="attributes">
            <attribute name="class" remove="py-1" add="py-0" separator=" "/>
        </xpath>
    </t>

    <t t-name="pyper_ui_kit.SearchBar.Facets" t-inherit="web.SearchBar.Facets" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_searchview_facet')]" position="attributes">
            <attribute name="class" separator=" " remove="bg-200"/>
        </xpath>

        <xpath expr="//div[hasclass('o_searchview_facet')]/div[hasclass('bg-view')]" position="attributes">
            <attribute name="class" separator=" " remove="opacity-0 opacity-100-hover"/>
        </xpath>
    </t>
</templates>
