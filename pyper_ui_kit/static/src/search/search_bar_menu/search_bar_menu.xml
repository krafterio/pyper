<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_ui_kit.SearchBarMenu" t-inherit="web.SearchBarMenu" t-inherit-mode="extension">
        <xpath expr="//Dropdown[1]" position="attributes">
            <attribute name="togglerClass">'o_searchview_dropdown_toggler d-print-none btn btn-outline-secondary o-no-caret h-100'</attribute>
        </xpath>

        <xpath expr="//t[@t-set-slot='toggler']" position="replace">
             <t t-set-slot="toggler" t-slot-scope="scope">
                <div data-hotkey="shift+q" title="Toggle Search Panel">Advanced search</div>
            </t>
        </xpath>
    </t>
</templates>
