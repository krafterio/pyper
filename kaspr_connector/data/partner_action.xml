<odoo>
    <record model="ir.actions.server" id="link_update_linkedin_email">
        <field name="name">Update infos from linkedIn profile</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
                records.action_update_kaspr_linkedin_email_form()
        </field>
    </record>

    <record model="ir.actions.server" id="link_update_linkedin_phone">
        <field name="name">Update infos from linkedIn profile (with phone)</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
                records.action_update_kaspr_linkedin_phone_form()
        </field>
    </record>

</odoo>