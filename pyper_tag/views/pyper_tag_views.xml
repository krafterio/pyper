<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pyper_tag_tree" model="ir.ui.view">
        <field name="name">pyper.tag.tree</field>
        <field name="model">pyper.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags">
                <field name="generic_name"/>
                <field name="value"/>
                <field name="color_id"/>
                <field name="icon"/>
            </tree>
        </field>
    </record>

    <record id="view_pyper_tag_form" model="ir.ui.view">
        <field name="name">pyper.tag.form</field>
        <field name="model">pyper.tag</field>
        <field name="arch" type="xml">
            <form string="Tag Form">
                <group>
                    <field name="generic_name"/>
                    <field name="value"/>
                    <field name="color_id"/>
                    <field name="icon"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_pyper_tag_kanban" model="ir.ui.view">
        <field name="name">pyper.tag.kanban</field>
        <field name="model">pyper.tag</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div>
                                    <strong>
                                        <field name="value"/>
                                    </strong>
                                </div>
                                <div>
                                    <field name="icon"/>
                                </div>
                            </div>
                            <div>
                                <field name="color_name"/>
                            </div>
                            <div>
                                <field name="color_hex_code"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_pyper_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">pyper.tag</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_pyper_tag_root" name="Tags" />
    <menuitem id="menu_pyper_tag" parent="menu_pyper_tag_root" name="Manage Tags" action="action_pyper_tag"/>
</odoo>
