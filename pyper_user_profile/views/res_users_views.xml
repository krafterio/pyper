<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_tree" model="ir.ui.view">
        <field name="name">res.users.tree.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <field name="user_profile_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']/group[1]" position="after">
                <group>
                    <group string="User profile">
                        <field
                            name="user_profile_id"
                            options="{'no_create': True, 'no_edit': True}"
                        />
                    </group>
                </group>
            </xpath>

            <xpath expr="//page[@name='access_rights']" position="after">
                <page name="roles" string="Roles">
                    <field name="user_role_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
