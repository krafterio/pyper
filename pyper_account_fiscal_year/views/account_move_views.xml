<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_move_form">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="date_range_fy_id" optional="hide" options="{'no_open': True}" />
            </field>

        </field>
    </record>

    <record model="ir.ui.view" id="view_account_move_filter">
        <field name="name">account.move.select.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="date_range_fy_id" />
            </xpath>

            <xpath expr="//group//filter[@name='by_date']" position="after">
                <filter string="Fiscal Year" name="date_range_fy_id" domain="[]" context="{'group_by': 'date_range_fy_id'}" help="Fiscal Year by Date"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_invoice_filter">
        <field name="name">account.invoice.select.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="date_range_fy_id" />
            </xpath>

            <xpath expr="//group//filter[@name='duedate']" position="after">
                <filter string="Fiscal Year" name="date_range_fy" domain="[]" context="{'group_by': 'date_range_fy_id'}" help="Fiscal Year by Date"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_invoice_tree">
        <field name="name">account.invoice.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">

            <field name="date" position="after">
                <field name="date_range_fy_id" optional="hide"/>
            </field>

        </field>
    </record>
</odoo>
