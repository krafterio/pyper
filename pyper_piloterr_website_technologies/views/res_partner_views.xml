<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@name='k-partner-scraper-action']">
                <button
                    class="btn btn-secondary btn-sm mb-3"
                    type="object"
                    name="action_search_piloterr_technologies"
                    icon="fa-code me-1"
                    data-tooltip-delay="0"
                    invisible="technology_ids or not website"
                    title="Crawl website"
                >Crawl website</button>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='display_name']" position="before">
                <header>
                    <button
                        type="object"
                        name="search_piloterr_companies_technologies"
                        string="Import technologies"
                    />
                </header>
            </xpath>
        </field>
    </record>
</odoo>
