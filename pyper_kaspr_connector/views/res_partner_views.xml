<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']//t[@t-name='kanban-menu']" position="inside">
                <field name="linkedin" invisible="True"/>
                <button
                    class="dropdown-item"
                    type="object"
                    name="action_update_kaspr_linkedin_form"
                    icon="fa-phone me-1"
                    data-tooltip-delay="0"
                    invisible="linkedin == False"
                    title="Find phone number"
                >Find phone number</button>
            </xpath>
        </field>
    </record>
</odoo>
