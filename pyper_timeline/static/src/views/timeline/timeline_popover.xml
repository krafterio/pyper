<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_pipeline.TimelinePopover">
        <div style="max-width: 320px;">
            <!-- the chosen value is rather arbitrary: the idea was to have enough space (but not too much) for some particular known cases-->
            <div class="popover-header d-flex justify-content-between py-2 pe-2">
                <h4 t-if="props.label" class="p-0 pt-1">
                    <t t-out="props.label" />
                </h4>

                <span t-else=""/>

                <span class="ms-4 mt-1 me-2 cursor-pointer" t-on-click.stop="props.close">
                    <i class="fa fa-close" />
                </span>
            </div>

            <div class="popover-body">
                <t t-call="{{ computedTemplate }}" t-call-context="renderingContext"/>
            </div>

            <t t-if="props.editButton || props.deleteButton">
                <div class="popover-footer border-top p-3">
                    <button t-if="props.editButton" class="btn btn-primary btn-sm" t-on-click="onEditClick" t-out="props.editButton.text"/>

                    <button t-if="props.deleteButton" class="btn btn-secondary btn-sm" t-on-click="onDeleteClick" t-out="props.deleteButton.text"/>
                </div>
            </t>
        </div>
    </t>

    <t t-name="pyper_pipeline.TimelinePopover.default">
        <ul class="p-0 mb-0 list-unstyled">
            <li class="pe-2">
                <strong>Start:</strong> <span t-out="start"/>
            </li>

            <li class="pe-2">
                <strong>End:</strong> <span t-out="end"/>
            </li>
        </ul>
    </t>
</templates>
