<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_timeline.TimelineRenderer">
        <div
            class="o_timeline_renderer o_renderer"
            t-att-class="timelineClasses"
            tabindex="-1"
            t-ref="timeline"
        />
    </t>

    <t t-name="pyper_timeline.TimelineRenderer.TooltipUpdate">
        <div t-if="luxonStart">
            <strong>Start:</strong>
            <span class="ms-2" t-out="formatDateTime(luxonStart)"/>
        </div>

        <div t-if="luxonEnd">
            <strong>End:</strong>
            <span class="ms-2" t-out="formatDateTime(luxonEnd)"/>
        </div>
    </t>
</templates>
