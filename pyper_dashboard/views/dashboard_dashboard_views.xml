<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard -->
    <record model="ir.ui.view" id="view_dashboard_dashboard">
        <field name="name">Dashboard</field>
        <field name="model">dashboard.dashboard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form edit="False" create="False" delete="False">
                <dashboard switcher="True"/>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_dashboard_open">
        <field name="name">Dashboard</field>
        <field name="res_model">dashboard.dashboard</field>
        <field name="view_mode">form</field>
        <field name="context">{'disable_toolbar': True}</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="view_dashboard_dashboard"/>
    </record>

    <!-- Config -->
    <record model="ir.ui.view" id="view_dashboard_dashboard_tree">
        <field name="name">dashboard.dashboard.tree</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="view_id" optional="hide"/>
                <button name="action_dashboard_debug_view" type="object" title="Settings" icon="fa-bug fa-lg" groups="base.group_no_one"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_dashboard_dashboard_search">
        <field name="name">dashboard.dashboard.search</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <search string="Dashboards">
                <field name="name"/>
                <field name="view_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>

        </field>
    </record>

    <record model="ir.ui.view" id="view_dashboard_dashboard_form">
        <field name="name">dashboard.dashboard.form</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>

                <sheet>
                    <h1 class="w-100">
                        <field
                            class="fw-bold"
                            name="name"
                            rows="1"
                            widget="text"
                            placeholder="My dashboard"
                        />
                    </h1>

                    <group name="info">
                        <group>
                            <field name="view_id"/>
                        </group>

                        <group>
                        </group>
                    </group>

                    <group>
                        <field name="arch_db"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_dashboard_dashboard_list">
        <field name="name">Dashboards</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dashboard.dashboard</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_dashboard_dashboard_search"/>
    </record>
</odoo>
