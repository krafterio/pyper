<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.ui.view" id="dashboard_view">
            <field name="name">Dashboard</field>
            <field name="model">dashboard.board</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <dashboard layout="2-1">
                        <column/>
                    </dashboard>
                </form>
            </field>
        </record>
    </data>

    <data>
        <record model="ir.actions.act_window" id="action_dashboard_open">
            <field name="name">Dashboard</field>
            <field name="res_model">dashboard.board</field>
            <field name="view_mode">form</field>
            <field name="context">{'disable_toolbar': True}</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="dashboard_view"/>
        </record>

        <!-- Dashboard Menu -->
        <menuitem
            id="menu_dashboard_root"
            name="Dashboards"
            action="action_dashboard_open"
            sequence="10"
            web_icon="pyper_dashboard,static/description/icon.png"
        />
    </data>
</odoo>
