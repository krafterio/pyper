<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Config -->
    <record model="ir.ui.view" id="view_dashboard_category_tree">
        <field name="name">dashboard.category.tree</field>
        <field name="model">dashboard.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_dashboard_category_search">
        <field name="name">dashboard.category.search</field>
        <field name="model">dashboard.category</field>
        <field name="arch" type="xml">
            <search string="Categories">
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>

        </field>
    </record>

    <record model="ir.ui.view" id="view_dashboard_category_form">
        <field name="name">dashboard.category.form</field>
        <field name="model">dashboard.category</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>

                <sheet>
                    <h1 class="w-100">
                        <field
                            class="fw-bold"
                            name="name"
                            rows="1"
                            widget="text"
                            placeholder="My category"
                        />
                    </h1>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_dashboard_category_list">
        <field name="name">Dashboard categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dashboard.category</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_dashboard_category_search"/>
    </record>
</odoo>
