<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_dashboard_board">
        <field name="name">My dashboard</field>
        <field name="model">dashboard.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <dashboard string="My dashboard" switcher="False"/>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_my_dashboard_open">
        <field name="name">My dashboard</field>
        <field name="res_model">dashboard.board</field>
        <field name="view_mode">form</field>
        <field name="context">{'disable_toolbar': True}</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="view_dashboard_board"/>
    </record>
</odoo>
