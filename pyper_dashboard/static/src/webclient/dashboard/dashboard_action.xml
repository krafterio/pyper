<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_dashboard.DashboardAction">
        <div class="pyper_dashboard--action bg-view border" t-att="props.attr">
            <div class="pyper_dashboard--action-header" t-attf-class="{{props.title ? '' : 'oe_header_empty'}}" name="pyper_dashboard_action_header">
                <div t-attf-class="pyper_dashboard--action-header-title {{props.title ? '' : 'oe_header_empty'}}">
                    <h3 t-out="props.title"></h3>
                </div>
            </div>

            <t t-if="!isValid">
                <div class="text-center text-warning m-1">Invalid action</div>
            </t>

            <t t-if="showView">
                <View t-props="viewProps"/>
            </t>
        </div>
    </t>
</templates>
