<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pyper_drawer_header.NavBar" t-inherit="web.NavBar" t-inherit-mode="extension">
        <xpath expr="//Drawer" position="inside">
            <t t-set-slot="header">
                <div class="o-drawer--header" role="menu">
                    <t t-foreach="headerDrawerItems" t-as="item" t-key="item.key">
                        <div t-att-data-index="item.index"/>
                        <ErrorHandler onError="error => this.handleItemError(error, item)">
                            <t t-component="item.Component" t-props="item.props"/>
                        </ErrorHandler>
                    </t>
                </div>
            </t>
        </xpath>
    </t>

</templates>
