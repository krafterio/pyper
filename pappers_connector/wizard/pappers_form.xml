<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pappers_form" model="ir.ui.view">
        <field name="name">pappers.form</field>
        <field name="model">pappers.form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="siret"/>
                </group>

                <footer>
                    <button
                        name="action_pappers_api_call"
                        type="object"
                        string="Get company info"
                        class="btn btn-primary"
                        data-hotkey="g"
                    />

                    <button
                        string="Cancel"
                        class="btn-secondary"
                        data-hotkey="z"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
