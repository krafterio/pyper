<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="google_recaptcha.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='recaptcha']" position="after">
                <setting
                    help="Protect your login page from spam and abuse."
                    id="pyper_recaptcha_login"
                    invisible="not module_google_recaptcha"
                >
                    <field name="recaptcha_login_enabled"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
