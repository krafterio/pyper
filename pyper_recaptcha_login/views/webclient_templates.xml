<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pyper_recaptcha_login.login" inherit_id="web.login">
        <xpath expr="//button[@type='submit']" position="before">
            <t t-set="recaptcha_login_enabled" t-value="env['ir.config_parameter'].sudo().get_param('pyper_recaptcha_login.enabled')"/>

            <script t-if="recaptcha_login_enabled"
                    type="text/javascript"
                    src="https://www.google.com/recaptcha/api.js"
            />

            <script t-if="recaptcha_login_enabled">
                function onSubmitLogin(token) {
                    document.querySelector("form.oe_login_form").submit();
                }
            </script>
        </xpath>

        <xpath expr="//button[@type='submit']" position="attributes">
            <attribute name="class" separator=" " add="g-recaptcha"/>
            <attribute name="t-att-data-sitekey">env['ir.config_parameter'].sudo().get_param('recaptcha_public_key')</attribute>
            <attribute name="data-callback">onSubmitLogin</attribute>
            <attribute name="data-action">login_form</attribute>
        </xpath>
    </template>
</odoo>
