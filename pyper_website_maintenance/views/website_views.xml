<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_website_form" model="ir.ui.view">
        <field name="name">website.view.form.inherit</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='domain']/field[@name='domain']" position="after">
                <field name="is_under_maintenance"/>
                <field name="under_maintenance_page"
                       domain="[('website_published', '=', True), ('website_indexed', '=', False), ('website_id', '=', id)]"
                       context="{'no_create_edit': True}"
                       required="is_under_maintenance"
                       invisible="not is_under_maintenance"
                />
            </xpath>
        </field>
    </record>
</odoo>
