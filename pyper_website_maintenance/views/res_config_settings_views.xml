<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="website_info_settings" position="after">
                <h2>Website Maintenance</h2>

                <div class="row mt16 o_settings_container" id="website_shop_address">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="is_under_maintenance" string="Under Maintenance"/>

                            <field name="is_under_maintenance" widget="boolean_toggle" style="padding-left: 5px;"/>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane" invisible="not is_under_maintenance">
                            <label for="under_maintenance_page"/>

                            <field name="under_maintenance_page"
                                   domain="[('website_published', '=', True), ('website_indexed', '=', False), ('website_id', '=', website_id)]"
                                   context="{'no_create_edit': True}"
                                   required="is_under_maintenance"
                                   style="padding-left: 5px;"
                            />

                            <div class="text-muted">
                                The published and no indexed website page used to display the maintenance page.
                            </div>
                        </div>
                    </div>

                </div>
            </block>
        </field>
    </record>
</odoo>
