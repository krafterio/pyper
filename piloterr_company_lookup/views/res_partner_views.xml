<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="btn btn-secondary btn-quick p-0"
                    type="object"
                    name="search_piloterr_company"
                    icon="fa-id-card me-2"
                    data-tooltip-delay="0"
                    invisible="is_company == False"
                >
                    <div class="o_stat_info">
                        <span class="o_stat_text">Import<br/>infos</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='display_name']" position="before">
                <header>
                    <button
                        type="object"
                        name="search_piloterr_companies"
                        string="Import infos"
                    />
                </header>
            </xpath>
        </field>
    </record>
</odoo>
