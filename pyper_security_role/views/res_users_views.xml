<?xml version="1.0"?>
<odoo>
    <record id="view_users_tree" model="ir.ui.view">
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lang']" position="before">
                <field name="role_id" optional="show" options="{'no_create': True, 'no_edit': True}" context="{'display_role_name': True}"/>
                <field name="role_ids" widget="many2many_tags" optional="hide" options="{'no_create': True, 'no_edit': True}" context="{'display_role_name': True}" groups="pyper_security_role.group_multi_role"/>
                <field name="has_custom_groups" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']/group[1]" position="before">
                <group string="Roles management">
                    <group>
                        <field name="role_id" options="{'no_create': True, 'no_edit': True}" context="{'display_role_name': True}"/>

                        <div colspan="2">
                            <button name="%(action_confirm_reset_security_groups)d"
                                    type="action"
                                    string="Reset access rights"
                                    class="btn-sm btn-outline-warning mb-2 me-2"
                                    invisible="not has_custom_groups"
                            />

                            <button name="action_show_custom_groups"
                                    type="object"
                                    string="See custom access rights"
                                    class="btn-sm btn-outline-secondary mb-2 me-2"
                                    invisible="not has_custom_groups"
                            />
                        </div>
                    </group>

                    <group>
                        <field name="role_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}" context="{'display_role_name': True}" groups="pyper_security_role.group_multi_role"/>
                        <field name="has_custom_groups"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
