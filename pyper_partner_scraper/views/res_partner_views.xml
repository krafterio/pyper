<odoo>
    <record id="pyper_partner_scraper.view_partner_form_override" model="ir.ui.view">
        <field name="name">res.partner.scraper.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="priority">0</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="before">
                <div name="k-partner-scraper-action" class="d-flex gap-1"/>
            </xpath>

            <xpath expr="//field[@name='child_ids']//t[@t-name='kanban-box']" position="before">
                <t t-name="kanban-menu">
                    <div class="container"/>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
