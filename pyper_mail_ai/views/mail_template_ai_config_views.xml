<?xml version="1.0"?>
<odoo>
    <record id="mail_template_ai_config_view_tree" model="ir.ui.view">
        <field name="name">mail.template.ai.config.tree</field>
        <field name="model">mail.template.ai.config</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="mail_template_ai_config_view_form" model="ir.ui.view">
        <field name="name">mail.template.ai.config.form</field>
        <field name="model">mail.template.ai.config</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>

                    <group>
                        <field name="user_model_name" invisible="True"/>

                        <field name="instruction_subject"/>

                        <field name="instruction_content"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mail_template_ai_config" model="ir.actions.act_window">
        <field name="name">Email Template AI Configurations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.template.ai.config</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
