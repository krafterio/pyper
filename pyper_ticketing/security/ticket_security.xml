<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ticket_rule_company" model="ir.rule">
            <field name="name">Ticket: company rule</field>
            <field name="model_id" ref="model_ticket"/>
            <field name="domain_force">[('parent_id', '=', user.partner_id.parent_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ticket_rule_admin" model="ir.rule">
            <field name="name">Ticket: admin access rule</field>
            <field name="model_id" ref="model_ticket"/>
            <field name="domain_force">[('status', '!=', 'waiting_for_validation')]</field>  <!-- Permet l'accÃ¨s Ã  tous les tickets -->
            <field name="groups" eval="[(4, ref('pyper_ticketing.group_ticket_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>