<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ticket_config_settings_view_form" model="ir.ui.view">
        <field name="name">ticket.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@class='oe_form_configuration']" position="inside">
                <div class="app_settings_block" data-string="Ticketing" string="Ticketing">
                    <h2>Ticketing Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col9">
                            <field name="ticket_validator"/>
                            <label for="ticket_validator" string="Enable Ticketing Validation"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
