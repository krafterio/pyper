<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pyper_queue_job_log_form" model="ir.ui.view">
        <field name="name">pyper.queue.job.log.form</field>
        <field name="model">pyper.queue.job.log</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="details" string="Details">
                        <field name="queue_job_id"/>
                    </group>

                    <group name="log" string="Log">
                        <field name="name" invisible="name == False"/>
                        <field name="message" invisible="message == False"/>
                        <field name="info" invisible="info == False"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pyper_queue_job_log_tree" model="ir.ui.view">
        <field name="name">pyper.queue.job.log.tree</field>
        <field name="model">pyper.queue.job.log</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list create="False" edit="False">
                <field name="queue_job_id" optional="hide"/>
                <field name="date"/>
                <field name="type"/>
                <field name="name"/>
                <field name="message" optional="show"/>
                <field name="info" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="pyper_queue_job_log_search" model="ir.ui.view">
        <field name="name">pyper.queue.job.log.search</field>
        <field name="model">pyper.queue.job.log</field>
        <field eval="3" name="priority"/>
        <field name="arch" type="xml">
            <search string="Queue Job Logs">
                <field name="name" string="Name"/>
                <field name="message" string="Message"/>
                <field name="info" string="Info"/>
                <field name="type" string="Type"/>
                <field name="queue_job_id" string="Queue Job"/>

                <filter name="type_success" string="Success" domain="[('type', '=', 'success')]"/>
                <filter name="type_info" string="Info" domain="[('type', '=', 'info')]"/>
                <filter name="type_warning" string="Warning" domain="[('type', '=', 'warning')]"/>
                <filter name="type_error" string="Error" domain="[('type', '=', 'error')]"/>

                <group expand="0" string="Group By">
                    <filter name="by_type" string="Type" domain="[]"  context="{'group_by': 'type'}"/>
                    <filter name="by_name" string="Name" domain="[]"  context="{'group_by': 'name'}"/>
                    <filter name="by_message" string="Message" domain="[]"  context="{'group_by': 'message'}"/>
                    <filter name="by_queue_job" string="Queue Job" domain="[]"  context="{'group_by': 'queue_job_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pyper_queue_job_log_action" model="ir.actions.act_window">
        <field name="name">Queue Job Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pyper.queue.job.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_pyper_queue_job_log"
        action="pyper_queue_job_log_action"
        parent="menu_pyper_queue_job_config"
    />
</odoo>
