<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_queue_job_run" model="ir.actions.server">
        <field name="name">Schedule now future enqueued jobs</field>
        <field name="model_id" ref="model_pyper_queue_job"/>
        <field name="binding_model_id" ref="model_pyper_queue_job"/>
        <field name="state">code</field>
        <field name="code">
            action = records.schedule_now()
        </field>
    </record>

    <record id="action_queue_job_stop" model="ir.actions.server">
        <field name="name">Stop</field>
        <field name="model_id" ref="model_pyper_queue_job"/>
        <field name="binding_model_id" ref="model_pyper_queue_job"/>
        <field name="state">code</field>
        <field name="code">
            action = records.stop()
        </field>
    </record>

    <record id="action_queue_job_relaunch" model="ir.actions.server">
        <field name="name">Relaunch</field>
        <field name="model_id" ref="model_pyper_queue_job"/>
        <field name="binding_model_id" ref="model_pyper_queue_job"/>
        <field name="state">code</field>
        <field name="code">
            action = records.relaunch()
        </field>
    </record>

    <record id="action_queue_job_cancel" model="ir.actions.server">
        <field name="name">Cancel</field>
        <field name="model_id" ref="model_pyper_queue_job"/>
        <field name="binding_model_id" ref="model_pyper_queue_job"/>
        <field name="state">code</field>
        <field name="code">
            action = records.cancel()
        </field>
    </record>

    <record id="action_queue_job_retry" model="ir.actions.server">
        <field name="name">Retry</field>
        <field name="model_id" ref="model_pyper_queue_job"/>
        <field name="binding_model_id" ref="model_pyper_queue_job"/>
        <field name="state">code</field>
        <field name="code">
            action = records.retry()
        </field>
    </record>
</odoo>
