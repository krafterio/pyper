<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="pyper_control_panel.CogMenu" t-inherit="web.CogMenu" t-inherit-mode="extension">
        <xpath expr="//t[@t-set-slot='toggler']//i[hasclass('fa-cog')]" position="replace">
            <div class="btn btn-panel btn-panel-white text-nowrap btn rounded-0">
                <i class="fa fa-cog"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_cp_action_menus')]" position="attributes">
            <attribute name="class">o_cp_action_menus</attribute>
        </xpath>

        <xpath expr="//div[hasclass('o_cp_action_menus')]//Dropdown" position="attributes">
            <attribute name="togglerClass" remove="ms-1" separator=" "/>
        </xpath>
    </t>

    <t t-name="pyper_control_panel.ActionMenus" t-inherit="web.ActionMenus" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_cp_action_menus')]" position="attributes">
            <attribute name="class">o_cp_action_menus</attribute>
        </xpath>

        <xpath expr="//div[hasclass('o_cp_action_menus')]/Dropdown[2]" position="attributes">
            <attribute name="togglerClass">'btn btn-secondary'</attribute>
        </xpath>

        <xpath expr="//div[hasclass('o_cp_action_menus')]/Dropdown[2]" position="attributes">
            <attribute name="togglerClass">'btn btn-secondary ms-2 text-nowrap'</attribute>
        </xpath>

        <xpath expr="//div[hasclass('o_cp_action_menus')]/Dropdown[2]/t[@t-set-slot='toggler']/i" position="replace">
            <i class="fa fa-cog"/>
        </xpath>

        <xpath expr="//div[hasclass('o_cp_action_menus')]/Dropdown[2]/t[@t-set-slot='toggler']/span" position="replace"/>
    </t>

</templates>
