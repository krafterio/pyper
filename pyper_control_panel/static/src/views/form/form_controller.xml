<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_control_panel.FormView.Buttons" t-inherit="web.FormView.Buttons" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_form_button_save')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-light px-1 py-0 lh-sm" add="btn-primary me-2"/>
        </xpath>

        <xpath expr="//button[hasclass('o_form_button_cancel')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-secondary" add="btn-light"/>
        </xpath>

        <xpath expr="//button[hasclass('o_form_button_remove')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-secondary" add="btn-light"/>
        </xpath>

        <xpath expr="//button[hasclass('o_form_button_create')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-secondary" add="btn-primary"/>
        </xpath>
    </t>
</templates>
