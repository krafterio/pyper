<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pyper_control_panel.FormStatusIndicator" t-inherit="web.FormStatusIndicator" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_form_status_indicator')]" position="attributes">
            <attribute name="class" separator=" " add="gap-2"/>
        </xpath>

        <xpath expr="//div[hasclass('o_form_status_indicator_buttons')]" position="attributes">
            <attribute name="class" separator=" " add="gap-2"/>
        </xpath>

        <xpath expr="//button[hasclass('o_form_button_save')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-light px-1 py-0 lh-sm" add="btn-primary"/>
        </xpath>

        <xpath expr="//button[hasclass('o_form_button_cancel')]" position="attributes">
            <attribute name="class" separator=" " remove="btn-secondary px-1 py-0 lh-sm" add="btn-light"/>
        </xpath>
    </t>
</templates>
