<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="pyper_ui_kit_discuss.ActivityMenu" t-inherit="mail.ActivityMenu" t-inherit-mode="extension">
        <xpath expr="//t[@t-set-slot='toggler']" position="replace">
            <t t-set-slot="toggler">
                <p class="mb-0">My tasks</p>

                <span t-if="store.activityCounter"
                      class="o-mail-ActivityMenu-counter badge rounded-pill position-relative"
                >
                    <t t-esc="store.activityCounter"/>
                </span>
            </t>
        </xpath>

        <xpath expr="//Dropdown" position="attributes">
            <attribute name="togglerClass">'btn-tasks'</attribute>
        </xpath>
    </t>
</templates>
